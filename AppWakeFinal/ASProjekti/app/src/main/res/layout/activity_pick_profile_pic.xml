<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.PickProfilePicActivity"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="7dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/boyfl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/boy" />

                <View
                    android:id="@+id/overlay1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/boy_1fl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="12dp">

                <ImageView
                    android:id="@+id/boy_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/boy_1" />

                <View
                    android:id="@+id/overlay2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/girlfl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/girl" />

                <View
                    android:id="@+id/overlay3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/girl_1fl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="12dp">

                <ImageView
                    android:id="@+id/girl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/girl_1" />

                <View
                    android:id="@+id/overlay4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/man_1fl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/man_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/man_1" />

                <View
                    android:id="@+id/overlay5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/man_4fl"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                >

                <ImageView
                    android:id="@+id/man_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/man_4" />

                <View
                    android:id="@+id/overlay6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>